<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Inscription{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">

        {% block stylesheets %}

        {# Custom fonts for this template #}
        <link href="assets/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
        {# Custom styles for this template #}
        <link href="assets/css/sb-admin-2.min.css" rel="stylesheet">

        {% endblock %}

    </head>
    
        {% block body %}

        <body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Créer un compte</h1>
                            </div>
                            {{ form_start(form, {'attr': {'class': 'user'}}) }}
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget(form.last_name, { 'attr': {'class': 'form-control form-control-user', 'placeholder': 'Nom'} }) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.first_name, { 'attr': {'class': 'form-control form-control-user', 'placeholder': 'Prénom'} }) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    {{ form_widget(form.email, { 'attr': {'class': 'form-control form-control-user', 'placeholder': 'Adresse e-mail'} }) }}
                                </div>
                                <div class="text-danger">
                                  {{ form_errors(form.email) }}
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        {{ form_widget(form.password.first, { 'attr': {'class': 'form-control form-control-user', 'placeholder': 'Mot de passe'} }) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_widget(form.password.second, { 'attr': {'class': 'form-control form-control-user', 'placeholder': 'Répéter le mot de passe'} }) }}
                                    </div>
                                </div>
                                <div class="text-danger">
                                  {{ form_errors(form.password.first) }}
                                </div>
                                <input type="submit" class="btn btn-primary btn-user btn-block" value="Créer un compte">
                            {{ form_end(form) }}
                            <hr>
                            <div class="text-center">
                                <a class="small" href="/login">Vous avez déjà un compte? Se connecter</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    {% block javascripts %}

        <!-- Bootstrap core JavaScript-->
    <script src="assets/vendor/jquery/jquery.min.js"></script>
    <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="assets/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="assets/js/sb-admin-2.min.js"></script>

        {% endblock %}

    </body>

        {% endblock %}
        
</html>